<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView58"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#66dadada" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView58"
        android:padding="10dp"
        android:id="@+id/relativeLayout11">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imageView24"
            android:src="@drawable/card_title_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="附近的鱼塘"
            android:id="@+id/yt_cate_title"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_alignTop="@+id/imageView24"
            android:layout_toRightOf="@+id/imageView24"
            android:layout_toEndOf="@+id/imageView24"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imageView24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        >

        <com.pjt.xianyu.NoScrollGridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yutang_cate_grid"
            android:numColumns="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>