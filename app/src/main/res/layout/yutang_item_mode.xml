<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/cate_item_img"
        android:src="@drawable/cate1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="love nici"
        android:id="@+id/cate_item_name"
        android:layout_below="@+id/cate_item_img"
        android:layout_alignLeft="@+id/cate_item_img"
        android:layout_alignStart="@+id/cate_item_img"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人气12313"
        android:id="@+id/cate_item_pop"
        android:layout_below="@+id/cate_item_name"
        android:layout_alignLeft="@+id/cate_item_name"
        android:layout_alignStart="@+id/cate_item_name"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        />
</RelativeLayout>