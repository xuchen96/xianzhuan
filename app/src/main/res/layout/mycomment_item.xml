<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/p_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/head5"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin"
        android:id="@+id/user_name"
        android:layout_alignTop="@+id/p_img"
        android:layout_toRightOf="@+id/p_img"
        android:layout_toEndOf="@+id/p_img"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="给你留言了"
        android:id="@+id/textView145"
        android:layout_alignBottom="@+id/user_name"
        android:layout_toRightOf="@+id/user_name"
        android:layout_toEndOf="@+id/user_name"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非常好  |"
        android:id="@+id/text_comment"
        android:layout_alignBottom="@+id/p_img"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:textColor="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10小时前"
        android:id="@+id/comment_time"
        android:textColor="@android:color/darker_gray"
        android:layout_alignTop="@+id/text_comment"
        android:layout_toRightOf="@+id/text_comment"
        android:layout_toEndOf="@+id/text_comment"
        android:layout_marginLeft="5dp"
        />
</RelativeLayout>