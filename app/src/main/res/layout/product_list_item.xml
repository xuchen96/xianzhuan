<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        >

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/p_info_footer_09"
        />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥49"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:layout_below="@+id/product_title"
        android:layout_alignLeft="@+id/product_title"
        android:layout_alignStart="@+id/product_title"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/p_noprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/p_price"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/p_price"
        android:layout_toRightOf="@+id/p_price"
        android:background="@drawable/remove_text"
        android:text="￥123"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/p_address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="长沙 芙蓉区"
        android:textColor="@android:color/darker_gray"
        android:layout_alignLeft="@+id/p_price"
        android:layout_alignStart="@+id/p_price"
        android:layout_below="@+id/p_price"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="包邮，用一次，限量sdasdasdasdadasfsafasfsfa"
        android:id="@+id/product_title"
        android:layout_below="@+id/product_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLength="10"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/p_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4分钟前"
        android:textColor="@android:color/darker_gray"
        android:gravity="right"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/p_address"
        android:layout_alignRight="@+id/product_img"
        android:layout_alignEnd="@+id/product_img"
        android:layout_marginRight="10dp"
        />
    </RelativeLayout>
</RelativeLayout>